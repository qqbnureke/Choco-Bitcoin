<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_tid_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_tid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="91050538"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_tid_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_tid_label"/>

    <TextView
        android:id="@+id/tv_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:text="08/08/2016 22:06"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_tid_label"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/tv_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="amount"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@id/tv_amount_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tid_text" />

    <TextView
        android:id="@+id/tv_amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:text="0.00001"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_amount_label"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/tv_amount_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tid_text"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45$"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_amount_text"/>




</android.support.constraint.ConstraintLayout>